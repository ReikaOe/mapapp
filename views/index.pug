doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    title mapapp
    link(rel='stylesheet', href='/css/style.css')
  body
    header
      h1 mapapp
      
    .wrapper
      p.main-title
      form.board-form(action='/register', method='post')
        span.label ユーザー名
        input(type='text', name='user_name', required)
        br
        br
        span.label Eメール
        input(type='email', name='email', required)
        br
        br
        span.label パスワード
        input(type='password', name='password', required)
        br
        br
        button.submit(type='submit') 登録
        if registerMessage !== 'undefined'
          p.error
            = registerMessage

    .wrapper
      p.main-title
      form.board-form(action='/signin', method='post')
        span.label Eメール
        input.input(type='email', name='email', required)
        br
        br
        span.label パスワード
        input.input(type='password', name='password', required)
        br
        br
        button.submit(type='submit') ログイン
        if signinMessage !== 'undefined'
          p.error
            = signinMessage        
