doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    title mapapp
    link(rel='stylesheet', href='/css/style.css')
  body
    header
      h1 mapapp
        i.fa.fa-map-marker.fa-2x(aria-hidden='true')
      ul
        if typeof userId !== 'undefined' 
          div.head
            p.login-user #{userName}さんとしてログインしています
          div.head
            a.btn(href='/signout') ログアウト
      
    .wrapper
      p.main-title
      form.board-form(action='/register', method='post')
        span.label ユーザー名
        input(type='text', name='user_name', required)
        br
        br
        span.label Eメール
        input(type='email', name='email', required)
        br
        br
        span.label パスワード
        input(type='password', name='password', required)
        br
        br
        button.submit(type='submit') 登録
        if registerMessage !== 'undefined'
          p.error
            = registerMessage

        br
        br

    .wrapper
      p.main-title
      form.board-form(action='/signin', method='post')
        span.label Eメール
        input.input(type='email', name='email', required)
        br
        br
        span.label パスワード
        input.input(type='password', name='password', required)
        br
        br
        button.submit(type='submit') ログイン
        if signinMessage !== 'undefined'
          p.error
            = signinMessage        
